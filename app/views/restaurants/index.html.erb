<div class="container">
  <h1>RESTAURANTS</h1>


  <div class="row">
      <% @restaurants.each do |restaurant|%>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %> </h5>
          <p class="card-text"> Type: <%= restaurant.category %> </p>
          <p class="card-text"> Contact: <%= restaurant.phone_number %> </p>
         <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
        </div>
      </div>
    </div>
      <% end %>
  </div>
    <%= link_to 'Add restaurant', new_restaurant_path %>

</div>
